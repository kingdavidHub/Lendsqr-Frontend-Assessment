{
  "compilerOptions": {
    "module": "ESNext", // Ensure ES module output
    "target": "ESNext", // Target a modern JS version
    "moduleResolution": "node", // Use Node's module resolution strategy
    "jsx": "react-jsx", // Use JSX for React
    "esModuleInterop": true, // Enable compatibility with CommonJS modules
    "strict": true, // Enable strict type-checking options
    "isolatedModules": true, // Ensure each file is treated as a module
    "types": ["vitest/globals"] // Include Vitest's global types
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "src/**/*.test.tsx"],
  "exclude": ["node_modules", "dist"]
}
